<div class="container px-5 px-sm-0">
  <% if @new_book.errors.any? %>
      <%= @new_book.errors.count %>errors prohibited this user from being saved:
      <ul>
    <% @new_book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  <div class="row">
    <%= render 'users/info', user: @user, book: @new_book %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= image_tag @user.get_profile_image(100,100) %>
              <%= link_to @user.name, user_path(@user.id) %>
            </td>

  	        <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>

            <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(book.id), class: "btn btn-sm btn-success text-white" %></td>
              <td><%= link_to "Destroy", book_path(book.id), class: "btn btn-sm btn-danger text-white", method: :delete, "data-confirm" => "本当に消しますか？" %></td>
            <% else %>
              <td></td>
              <td></td>
            <% end %>
          </tr>

      </table>
    </div>
  </div>
</div>